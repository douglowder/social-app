{
  "name": "bsky.app",
  "version": "1.63.0",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prebuild": "cp google-services.json.example google-services.json; expo prebuild --clean",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "start": "expo start --dev-client",
    "e2e:metro": "NODE_ENV=test RN_SRC_EXT=e2e.ts,e2e.tsx expo start",
    "e2e:build": "NODE_ENV=test detox build -c ios.sim.debug",
    "e2e:run": "NODE_ENV=test detox test --configuration ios.sim.debug --take-screenshots all",
    "nuke": "rm -rf ./node_modules && rm -rf ./ios && rm -rf ./android"
  },
  "dependencies": {
    "expo": "^50.0.0-preview.7",
    "expo-build-properties": "~0.11.0",
    "expo-dev-client": "~3.3.4",
    "expo-dev-launcher": "^2.4.14",
    "expo-status-bar": "~1.11.1",
    "expo-updates": "~0.24.5",
    "react": "18.2.0",
    "react-native": "0.73.1",
    "react-native-dotenv": "^3.4.9"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@jest/globals": "^29.7.0",
    "@react-native-community/eslint-config": "^3.0.0",
    "@react-native/babel-preset": "^0.73.19",
    "@react-native/typescript-config": "^0.74.0",
    "@testing-library/jest-native": "^5.4.1",
    "@testing-library/react-native": "^11.5.2",
    "@tsconfig/react-native": "^2.0.3",
    "@types/jest": "^29.4.0",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "babel-jest": "^29.7.0",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "detox": "^20.14.8",
    "jest": "^29.7.0",
    "jest-expo": "^50.0.1",
    "prettier": "^2.8.3",
    "react-dom": "^18.2.0",
    "react-test-renderer": "18.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "jest-expo/ios",
    "setupFilesAfterEnv": [
      "./jest/jestSetup.js",
      "@testing-library/jest-native/extend-expect"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "\\.[jt]sx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|nanoid|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|normalize-url|react-native-svg|@sentry/.*|sentry-expo|bcp-47-match)"
    ],
    "modulePathIgnorePatterns": [
      "__tests__/.*/__mocks__",
      "__e2e__/.*"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/platform",
      "<rootDir>/src/third-party",
      "<rootDir>/src/view/com/util",
      "<rootDir>/src/state/lib",
      "<rootDir>/__tests__/test-utils.js"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*{.js,.jsx,.ts,.tsx}": "yarn eslint --fix"
  }
}
